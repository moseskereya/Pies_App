@{
}

@model Product

<div class="col-sm-4 col-lg-4 col-md-4">
    <img src="@Model.ThumbNail" class="img-thumbnail img-responsive" alt="pies" />
    <div class="figure-caption">
        <h6 class="text-right price">@Model.Price.ToString("c")</h6>
        <h5>
            <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
        </h5>
        <p>@Model.ShortDescription</p>
    </div>
</div>